%div.login
  - if current_user 
    = link_to "Edit Profile", edit_user_path(:current)
    |
    = link_to "Logout", logout_path
  - else
    = link_to "Register", new_user_path
    |
    = link_to "Login", login_path

%div.body
  %h1 Edit Game
  
  = render :partial => 'form'
  
  %p
    = link_to "Show", game_path(@game)
    |
    = link_to "View All", games_path
